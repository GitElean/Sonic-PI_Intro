use_bpm 125



#Guitarra y director de orquesta XD José Hurtarte
in_thread do
  sleep 8
  6.times do
    with_fx :distortion do
      use_synth :pluck
      
      play :e3
      sleep 1.5
      play :e3
      sleep 0.5
      play :g3
      sleep 0.8
      play :e3
      sleep 0.7
      play :d3
      sleep 0.5
      play :c3
      sleep 2
      play :b2
      sleep 2
      
    end
  end
  8.times do
    with_fx :distortion do
      use_synth :pluck
      
      play chord(:g4, :major),amp:3
      sleep 0.5
    end
  end
  8.times do
    with_fx :distortion do
      use_synth :pluck
      
      play chord(:a4, :major),amp:3
      sleep 0.5
    end
  end
  2.times do
    with_fx :distortion do
      use_synth :beep
      
      play chord(:e4, :major),amp:3
      sleep 1.5
      play chord(:e4, :major),amp:3
      sleep 0.5
      play chord(:g4, :major),amp:3
      sleep 0.8
      play chord(:e4, :major),amp:3
      sleep 0.7
      play chord(:d4, :major),amp:3
      sleep 0.5
      play chord(:c4, :major),amp:3
      sleep 2
      play chord(:b3, :major),amp:3
      sleep 2
      
      play chord(:e4, :major),amp:3
      sleep 1.5
      play chord(:e4, :major),amp:3
      sleep 0.5
      play chord(:g4, :major),amp:3
      sleep 0.8
      play chord(:e4, :major),amp:3
      sleep 0.7
      play chord(:d4, :major),amp:3
      sleep 0.6
      play chord(:c4, :major),amp:3
      sleep 0.7
      play chord(:d4, :major),amp:3
      sleep 0.7
      play chord(:c4, :major),amp:3
      sleep 0.5
      play chord(:b3, :major),amp:3
      sleep 2
    end
  end
  8.times do
    with_fx :distortion do
      use_synth :pluck
      play chord(:g4, :major)
      sleep 0.5
    end
  end
  8.times do
    with_fx :distortion do
      use_synth :pluck
      play chord(:a4, :major)
      sleep 0.5
    end
  end
  4.times do
    with_fx :distortion do
      use_synth :pluck
      play :e3
      sleep 1.5
      play :e3
      sleep 0.5
      play :g3
      sleep 0.8
      play :e3
      sleep 0.7
      play :d3
      sleep 0.5
      play :c3
      sleep 2
      play :b2
      sleep 2
    end
  end
end


